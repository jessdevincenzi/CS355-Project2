<div id="content2">
    <% if(rs.length > 0) { %>
    <table border="1">
        <tr><th>Shoppers</th><th>Username</th></tr>
        <% for (var i=0; rs.length > i; i++) { %>
        <tr>
            <td><a href="/Shoppers/?ShopperID=<%= rs[i].ShopperID %>"> <%= rs[i].Name %></a></td>
            <td><a href="/Shoppers/?ShopperID=<%= rs[i].ShopperID %>"> <%= rs[i].Username %></a></td>
            <td>
                <a href="/Shoppers/delete/?ShopperID=<%= rs[i].ShopperID %>&title=<%= rs[i].title %>">Delete</a>
                <a href="/Shoppers/edit/?ShopperID=<%= rs[i].ShopperID %>">Edit</a>
            </td>
        </tr>
        <% } %>
    </table>
    <% } else { %>
    No shoppers exist.
    <% } %>
</div>

